<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Chat Room,HTML5,CSS3,FSE">
    <meta name="description" content="Foundations of Software Engineering Assignment">
    <meta name="author" content="Yaokang Wu">
    <link rel="stylesheet" type="text/css" href="/stylesheets/common.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>FSE Chat Room</title>
    <script type="text/javascript">

        function postMsg(){
            document.form.action = "/postMsg/";
            document.form.submit();
        }
        
    </script>
</head>
<body>
    <div class="top">
        <div class="chathead">FSE Chat Room</div>
        <button type="button" style="background-color: #ECB576;"> Logout </button>
    </div>

    <div class="middle">
        <!-- <script language="javascript1.2" type="text/javascript">
            function onGetMessage(context) 
            {
                msg.innerHTML+=context;
                msg_end.scrollIntoView(); 
            } 
        </script> -->
        <div class="list">
            <ul>
            <!-- <div id="msg" style="overflow:hidden;width:480px;"></div> -->
            <% comments.forEach(function(item){ %>
            <li class="item">
                <div class="message">
                    <div class="mtitle">
                        <div class="name"><%= item.username %></div>
                        <div class="time"><%= item.timestamp %></div>
                    </div>
                    <div class="comment"><%= item.content %></div>
                </div>
            </li>
        <% }) %>
            <!-- <div id="msg_end" style="height:0px; overflow:hidden"></div> -->
        </ul>
        </div>
    </div>

    <div class="post" >
        <form name="form" action="/postMsg" method="post">
            <!-- <form action="welcome.php" method="get"> -->
                <textarea name="newMsg"></textarea>
                <footer>
                <button type="submit" style="float: right; background-color: #ECB576;"> Post </button>
            </footer>
        </form>
    </div>
    
</body>
</html>